<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:background="@drawable/purple_round_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        >

        <ImageView
            android:id="@+id/itemPic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:contentDescription="@string/item_profile_picture"
            android:src="@drawable/ic_item"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/TxtItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:text="Item Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/itemPic"/>

        <TextView
            android:id="@+id/variantNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:text="Variant Name"
            android:textColor="@color/black"
            android:layout_below="@+id/TxtItemName"/>

        <TextView
            android:id="@+id/sellingPriceNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:text="Birr 0.00"
            android:lines="1"
            android:textStyle="normal|bold"
            android:textColor="@color/my_color"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/variantNameTxt"/>

        <TextView
            android:id="@+id/ClickCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/sellingPriceNum"
            android:layout_margin="2dp"
            android:background="@drawable/button_shape"
            android:paddingTop="4dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
</RelativeLayout>