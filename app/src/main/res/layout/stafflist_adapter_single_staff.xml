<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_round_shape"
    android:padding="6dp"
    android:layout_margin="3dp">

    <TextView
        android:id="@+id/staffName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staff Name"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/updateStaffBtn"
        android:layout_marginEnd="5dp"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/updateStaffBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_edit"
        android:layout_toLeftOf="@+id/deleteStaffBtn"
        android:background="@drawable/purple_round_shape"
        android:contentDescription="update"
        android:padding="3dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/deleteStaffBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete"
        android:background="@drawable/purple_round_shape"
        android:padding="3dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>